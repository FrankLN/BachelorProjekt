                        </button>
                        @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                        </ul>
                    </div>
                </div>
            </div>*@
        <header>
            <img src="~/Content/img/sjm_logo.jpg" alt="St Jude Medical" />
            <h2> Login Info</h2>
        </header>
        @if (ViewBag.Header == "Episode Administration")
        {
            <div class="nav">
                <ul>
                    <li class="active">@Html.ActionLink("Episode Administration", "Index", "Episode", new { area = "" }, new { @class = "navbar-brand-active" })</li>
                    <li class="active">@Html.ActionLink("Battery Administration", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                </ul>
            </div>
        }
        else
        {
            <div class="nav">
                <ul>
                    <li class="episodeAdmin">@Html.ActionLink("Episode Administration", "Index", "Episode", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li class="batteryAdmin">@Html.ActionLink("Battery Administration", "Index", "Home", new { area = "" }, new { @class = "navbar-brand-active" })</li>
                </ul>
            </div>
        }
        <div class="datePicker">
            <p class="date-picker1">Date from:</p>
            <input id="dpb" class='date-picker1' value="@ViewBag.DateBegin" onchange="alertFunction('dpb')" />
            <p class="date-picker2">Date to:</p>
            <input id="dpe" class='date-picker2' value="@ViewBag.DateEnd" onchange="alertFunction('dpe')" />
        </div>
        <div class="patientButton">
            <button type="button" id="opener" class="patientButton">Choose Patient</button>
        </div>

        <div id="dialog">
             <a class="popupPatient" title="Choose Patient"></a>
            <div id="container" style="min-width: 400px; min-height: 400px; "></div>
        </div>


                <div class="container body-content">
                    @RenderBody()
                </div>
            

                <div class="footer">
                    <p class="terms"> Terms and conditions</p>
                    <p class="copyright">&copy; @DateTime.Now.Year - WebApp</p>
                </div>
    </wrapper>
</body>
</html>