<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@ViewBag.Title - WebApp</title>
    <link href="~/Content/style/tableStyle.css?v=1" rel="stylesheet" type="text/css" />
    <link href="~/Content/style/homeStyle.css?v=1" rel="stylesheet" type="text/css" />
  

    <link href="http://code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.min.css" rel="stylesheet" type="text/css" />
    <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
    <script src="http://code.jquery.com/ui/1.10.4/jquery-ui.min.js"></script>
    <script src="~/Content/script/datePicker.js"></script>
</head>
<body>
    <wrapper>
        @*<div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                        </ul>
                    </div>
                </div>
            </div>*@
        <header>
            <h1> Logo</h1>

            <h2> Login Info</h2>

        </header>
        @if (ViewBag.Header == "Episode Administration")
        {
            <div class="nav">
                <ul>
                    <li class="active">@Html.ActionLink("Episode Administration", "Index", "Episode", new { area = "" }, new { @class = "navbar-brand-active" })</li>
                    <li class="active">@Html.ActionLink("Battery Administration", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                </ul>
            </div>
        }
        else
        {
            <div class="nav">
                <ul>
                    <li class="episodeAdmin">@Html.ActionLink("Episode Administration", "Index", "Episode", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li class="batteryAdmin">@Html.ActionLink("Battery Administration", "Index", "Home", new { area = "" }, new { @class = "navbar-brand-active" })</li>
                </ul>
            </div>
        }

        <div class="datePicker">
            <p class="date-picker1">Date from:</p>
            <input class='date-picker1' />
            <p class="date-picker2">Date to:</p>
            <input class='date-picker2' />
        </div>

        <div class="container body-content">
            @RenderBody()
        </div>


        <div class="footer">
            <p class="terms"> Terms and conditions</p>
            <p class="copyright">&copy; @DateTime.Now.Year - WebApp</p>
        </div>
    </wrapper>
</body>
</html>